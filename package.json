{
  "name": "@pengsha/hooks",
  "version": "1.0.1",
  "description": "A collection of custom hooks for React",
  "keywords": [
    "react",
    "hooks",
    "typescript"
  ],
  "homepage": "https://github.com/shapeng1998/hooks",
  "bugs": {
    "url": "https://github.com/shapeng1998/hooks/issues"
  },
  "author": "Peng Sha <me@pengsha.dev> (https://pengsha.dev)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shapeng1998/hooks.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/index.js",
  "license": "MIT",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "ci": "bun run build && bun run check-format && bun run check-exports && bun run lint && bun run test",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack .",
    "lint": "tsc",
    "test": "vitest run",
    "dev": "vitest",
    "local-release": "changeset version && changeset publish",
    "prepublishOnly": "bun run ci"
  },
  "packageManager": "bun@1.1.38",
  "peerDependencies": {
    "@types/react": ">=18.0.0",
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.0",
    "@changesets/cli": "^2.27.10",
    "@testing-library/react": "^16.0.1",
    "@types/react": "^18.3.12",
    "jsdom": "^25.0.1",
    "prettier": "^3.4.1",
    "react": "^18.3.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.6"
  }
}
